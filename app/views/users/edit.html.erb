<h1>Editing User #<%= @user.id %></h1>

<form action="/users/<%= @user.id %>/update">
  <div>
    <label for="name">name</label><br />
    <input id="name" name="name" value="<%= @user.name  %>" type="text" />
  </div>
  <div>
    <label for="email">email</label><br />
    <input id="email" name="email" value="<%= @user.email  %>" type="text" />
  </div>
  <div>
    <label for="password">password</label><br />
    <input id="password" name="password" value="<%= @user.password  %>" type="text" />
  </div>
  <div>
    <label for="password_digest">password_digest</label><br />
    <input id="password_digest" name="password_digest" value="<%= @user.password_digest  %>" type="text" />
  </div>
  <div>
    <input type="submit">
  </div>
</form>


